<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoSistemaUsuarios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoSistemaUsuarios.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/css/estilo.css" rel="stylesheet" asp-append-version="true" />
</head>
<body style="margin: 0">
    <div class="container">

        <div class="row align-items-center" style="height: 100vh">
            <div class="col" style="margin-right: 5rem">

                <h1>
                    Bienvenido al sistema de usuarios
                </h1>
                <a class="btn btn-primary" asp-action="Login">Iniciar sesión</a>
                <a class="btn btn-primary" asp-action="Registro">Crear una cuenta</a>
            </div>
        

            <main role="main" class="pb-3 col" id="contenido-vista">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>

</html>

