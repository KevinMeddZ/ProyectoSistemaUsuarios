<!DOCTYPE html>
<html lang="en">
<head>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<Usuario> SignInManager
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <title>@ViewData["Title"] - ProyectoSistemaUsuarios</title>
    <!-- Carga de Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Estilo.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Style1.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


</head>
<body>
    
    <div class="sidebar">
        <h2>Gestión de usuarios</h2>
        <nav>
            <a class="nav-link" asp-controller="" asp-action=""><i class="bi bi-house"></i> Inicio</a>
            <a class="nav-link" asp-area="" asp-controller="Panel" asp-action="index"><i class="bi bi-people"></i> Usuarios</a>
            <a class="nav-link" asp-controller="Acerca" asp-action="Index"><i class="bi bi-info-circle"></i> Acerca de</a>
        </nav>

        <div class="logout">
            <a class="nav-link" asp-controller="usuario" asp-action="logout"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a>
        </div>


        <p class="align-content-center">@User.Identity.Name</p>

    </div>

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
